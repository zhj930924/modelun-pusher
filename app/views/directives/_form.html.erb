<%= form_for(@directive, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, :class => "tinymce" %>
    <%= tinymce %>
  </div>
  <%= f.submit "Submit", class: "btn-xs" %>
<% end %>
